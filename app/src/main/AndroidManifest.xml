<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.diyaa.datecalculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DateInterval"
            android:label="@string/date_Interval_name"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".DateDifference"
            android:label="@string/date_difference_name"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".WorkDays"
            android:label="@string/work_days_name"
            android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>